@page "/stockdata"

<PageTitle>Stock forecast</PageTitle>

<h1>Stock forecast</h1>

<p>This component demonstrates fetching data from the server.</p>

@if (_forecasts == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
        <tr>
            <th>Date</th>
            <th>Price</th>
            <th>Volume</th>
            <th>News</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var forecast in _forecasts)
        {
            <tr>
                <td>@forecast.Date.ToShortDateString()</td>
                <td>@forecast.Price</td>
                <td>@forecast.Volume</td>
                <td>@forecast.News</td>
            </tr>
        }
        </tbody>
    </table>
}
